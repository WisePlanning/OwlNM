# Log file name
# not currently used
# default: /var/log/OwlNM.log
#LOG_FILE OwlNM.log

# Video file to play
# full path to file /your/video/file.(mp4|h264|mov)
# default: /home/wise/Movied/main.h264
#VIDEO_FILE /home/wise/Movies/main.h264

# video playback timeout
# Time in seconds after last sensor input before sending the stop signal
# default: 120
#TIMEOUT 120

# mode to run the program in
# options: SERVER|CONTROL|CLIENT
# default: CLIENT
#MODE CLIENT

# Port to use for communication
# defult: 4000
#PORT 4000

# Use Avahi to advertise service or find server
# options: YES|NO
# default: NO
#ENABLE_AVAHI NO

# Video player to use
# options: omxplayer|hello_video.bin
# default: hello_video.bin
#PLAYER /full/path/to/binary

# Verbose output
# options: YES|NO
# default: NO
#VERBOSE NO

# Server ipv4 address
# this option is ignored in SERVER mode, as the IP of the machine is used
# default: 192.168.0.101
#SERVER_ADDRESS (ipv4)
